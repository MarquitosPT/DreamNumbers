@page "/dashboard"

@inject IStatisticsService StatisticsService
@inject IDrawStorage DrawRepository
@inject IJSRuntime JS

<h2>Statistics Dashboard</h2>

<div class="mb-3">
    <label>Select Interval:</label>
    <select class="form-select w-auto" @bind="selectedInterval">
        <option value="20">Last 20 Draws</option>
        <option value="40">Last 40 Draws</option>
        <option value="60">Last 60 Draws</option>
    </select>
</div>

@if (stats == null)
{
    <p>Loading statistics...</p>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <h4>Absence Chart</h4>
            <canvas id="absenceChart"></canvas>
        </div>

        <div class="col-md-6">
            <h4>Frequency Chart</h4>
            <canvas id="frequencyChart"></canvas>
        </div>
    </div>

    <h4>Top 5 Most Probable Numbers</h4>

    <ul>
        @foreach (var n in stats.OrderByDescending(s => s.EstimatedProbability).Take(5))
        {
            <li>Number @n.Number â€” @n.EstimatedProbability.ToString("P2")</li>
        }
    </ul>

    <h4 class="mt-4">Statistics Table</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Number</th>
                <th>Absence</th>
                <th>Freq 20</th>
                <th>Freq 40</th>
                <th>Freq 60</th>
                <th>Probability</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in stats)
            {
                <tr class="@(s.CurrentAbsence >= 10 ? "high-absence" : "")">
                    <td>@s.Number</td>
                    <td>@s.CurrentAbsence</td>
                    <td>@s.Frequency20</td>
                    <td>@s.Frequency40</td>
                    <td>@s.Frequency60</td>
                    <td>@s.EstimatedProbability.ToString("P2")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<NumberStatistics> stats;
    private int selectedInterval = 60;
    private List<Draw> allDraws;

    protected override async Task OnInitializedAsync()
    {
        allDraws = await DrawRepository.GetAllAsync();
        LoadStatistics();
    }

    private void LoadStatistics()
    {
        stats = StatisticsService.CalculateStatistics(allDraws);
        InvokeAsync(StateHasChanged);
        RenderCharts();
    }

    private void RenderCharts()
    {
        var absenceData = stats.Select(s => s.CurrentAbsence).ToArray();
        var frequencyData = stats.Select(s =>
            selectedInterval == 20 ? s.Frequency20 :
            selectedInterval == 40 ? s.Frequency40 :
                                     s.Frequency60).ToArray();

        var labels = stats.Select(s => s.Number).ToArray();

        JS.InvokeVoidAsync("renderDashboardCharts", labels, absenceData, frequencyData);
    }
}
