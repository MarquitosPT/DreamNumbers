@page "/draws"

@inject IDrawStorage DrawRepository

<h2>Draw History</h2>

<div class="mb-3">
    <label>Filter Interval:</label>
    <select class="form-select w-auto" @bind="selectedInterval">
        <option value="20">Last 20</option>
        <option value="40">Last 40</option>
        <option value="60">Last 60</option>
        <option value="0">All</option>
    </select>
</div>

@if (filteredDraws == null)
{
    <p>Loading draws...</p>
}
else
{
    <button class="btn btn-success mb-3" @onclick="OpenModal">
        Adicionar Sorteio
    </button>

    <DrawModel @ref="drawModal" OnDrawAdded="ReloadDraws" />

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Number</th>
                <th>Year</th>
                <th>Numbers</th>
                <th>Dream</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var draw in filteredDraws)
            {
                <tr>
                    <td>@draw.Date.ToString("yyyy-MM-dd")</td>
                    <td>@draw.Number</td>
                    <td>@draw.Year</td>
                    <td>@string.Join(", ", draw.Numbers)</td>
                    <td>@draw.DreamNumber</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Draw> allDraws;
    private List<Draw> filteredDraws;
    private int selectedInterval = 0;
    private DrawModel drawModal;

    protected override async Task OnInitializedAsync()
    {
        await ReloadDraws();
    }

    private void ApplyFilter()
    {
        if (selectedInterval == 0)
        {
            filteredDraws = allDraws
                .OrderByDescending(d => d.Date)
                .ToList();
        }
        else
        {
            filteredDraws = allDraws
                .OrderByDescending(d => d.Date)
                .Take(selectedInterval)
                .ToList();
        }
    }

    private void OnIntervalChanged(ChangeEventArgs e)
    {
        selectedInterval = int.Parse(e.Value.ToString());
        ApplyFilter();
    }

    private async Task ReloadDraws()
    {
        allDraws = await DrawRepository.GetAllAsync();
        ApplyFilter();

        StateHasChanged();
    }

    private void OpenModal()
    {
        drawModal?.Show();
    }

}
